generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  profiles  Profile[]
  role      Role      @default(USER)
  gender    Gender?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Profile {
  id        String   @id @default(cuid())
  name      String
  avatar    Avatar
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Movie {
  id        String    @id @default(cuid())
  title     String
  thumbnail String
  genre     String[]
  age       String
  duration  String
  trailer   String
  video     String
  ranking   Int?
  createdAt DateTime? @default(now())
}

enum Role {
  USER
  ADMIN
}

enum Gender {
  MALE
  FEMALE
}

enum Avatar {
  avatar1
  avatar2
  avatar3
  avatar4
}
